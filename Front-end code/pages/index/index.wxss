page{
    height: 100%;
  }
  .content-top{
   width: 100%; 
   height: 26%;
    /* border: 1px solid red; */
  }
  
  .content-top .lb{
    height:100%;
    width:100%;
  }
  
  .content-top image{
    height:100%;
    width:100%;
  }
  
  /*中部*/
  .content-center{
    margin-top: 10px;
    width: 100%;
    height:150rpx;
  }
  
  .content-center .nav{
    width: 100%;
    height: 100%;
    display:flex;
    justify-content: space-between;
  }
  
  .nav .nav-item{
    width: 15%;
    height: 100%;
    text-align: center;
  }
  
  .nav-item image{
    width: 90%;
    height: 100rpx;
  }
  
  .content-bottm{
    margin-top: 20rpx;
    width: 100%;
  }
  .content-bottm .sub-list{
    width: 100%;
    
  }
  .list-item{
    margin-top: 10rpx;
    width: 100%;
    height: 200rpx;
   /* border: 1px solid red;*/
    border-bottom:1px solid gainsboro ;
    display: flex;
    justify-content: space-around;
  }
  .list-item .img{
    margin-top: 10rpx;
    height: 80%;
    width: 40%;
    /*border: 1px solid black;*/
  }
  .list-item image{
    height: 100%;
    width: 100%;
  }
  .list-item .text{
    height: 80%;
    width: 50%;
   /* border: 1px solid black;*/
    position: relative;
  }
  .text .sub-name{
    margin-top: 20rpx;
    font-size: 30rpx;
    font-weight: bolder;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .text .sub-price{
    margin-top: 10rpx;
    font-size: 40rpx;
    font-weight: bolder;
    color: red;
  }

  .text .sub-dec{
    font-size: 28rpx;
    font-weight: bolder;
    color:grey;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .text .btn{
    width: 100rpx;
    height: 100rpx;
    background-color: pink;
    border-radius: 50%;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: bolder;
    position: absolute;
    top:30rpx;
    right: 20rpx;
  }